# ============================================
# APARTALO BOT - Environment Variables
# ============================================

# WhatsApp Cloud API
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_VERIFY_TOKEN=LIVE_COMMERCE_2024
WHATSAPP_API_VERSION=v24.0

# Google Sheets
# Service Account Key en formato JSON (una sola linea)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Spreadsheet MAESTRO (contiene lista de negocios)
MASTER_SPREADSHEET_ID=your_master_spreadsheet_id

# Carpeta de Google Drive para guardar vouchers (opcional)
# Si no se especifica, se guarda en la raiz de Drive
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Platform Info
PLATFORM_NAME=ApartaLo
SUPPORT_PHONE=+51999999999
SUPPORT_EMAIL=soporte@apartalo.com

# App Config
PORT=3000
NODE_ENV=development
